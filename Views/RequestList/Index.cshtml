@model IEnumerable<FinanceRequest.Models.RequestModel>

@{ ViewBag.Title = "Requests";}

<div class="container">
    <h1>@ViewBag.Title</h1>

    <div class="row">
        <div class="col-md-12">
            <h3>@ViewBag.Message</h3>

            @if (Model != null)
            {
                <table class="table_border">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Title)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Description)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Charity)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Amount)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Status)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.SubmissionDate)
                        </th>
                        <th>
                            Request management
                        </th>
                    </tr>

                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Title)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Charity)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Amount)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Status.Description)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.SubmissionDate)
                        </td>
                        <td>
                            @Html.ActionLink("View", "Details", new { id = item.Id }, null)


                            @Html.ActionLink("Edit", "Edit", new { id = item.Id }, null)
                            @Html.ActionLink("Delete", "Delete", new { id = item.Id }, null)
                        </td>
                    </tr>
                    }
                </table>
            }
            else
            {
                <p>There are no requests right now.  Click here to @Html.ActionLink("Create a new request", "Index") </p>
            }
        </div>
    </div>
</div>